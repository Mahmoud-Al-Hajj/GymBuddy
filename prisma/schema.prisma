generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model exercises {
  id         Int       @id @default(autoincrement())
  workout_id Int?
  name       String    @db.VarChar(255)
  sets       Int
  reps       Int
  weight     Decimal?  @db.Decimal(6, 2)
  completed  Boolean?  @default(false)
  created_at DateTime? @default(now()) @db.Timestamp(6)
  updated_at DateTime? @default(now()) @db.Timestamp(6)
  workouts   workouts? @relation(fields: [workout_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model personal_bests {
  id            Int       @id @default(autoincrement())
  user_id       Int?
  workout_id    Int?
  exercise_name String    @db.VarChar(255)
  weight        Decimal   @db.Decimal(6, 2)
  reps          Int
  date          DateTime? @default(now()) @db.Timestamp(6)
  created_at    DateTime? @default(now()) @db.Timestamp(6)
  users         users?    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  workouts      workouts? @relation(fields: [workout_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model progress_photos {
  id         Int       @id @default(autoincrement())
  user_id    Int?
  workout_id Int?
  image_url  String    @db.VarChar(500)
  date       DateTime? @default(now()) @db.Timestamp(6)
  created_at DateTime? @default(now()) @db.Timestamp(6)
  users      users?    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  workouts   workouts? @relation(fields: [workout_id], references: [id], onUpdate: NoAction)
}

model users {
  id              Int               @id @default(autoincrement())
  email           String            @unique @db.VarChar(255)
  password        String            @db.VarChar(255)
  username        String?           @db.VarChar(100)
  gender          String?           @db.VarChar(20)
  age             Int?
  weight          Decimal?          @db.Decimal(5, 2)
  height          Decimal?          @db.Decimal(5, 2)
  created_at      DateTime?         @default(now()) @db.Timestamp(6)
  updated_at      DateTime?         @default(now()) @db.Timestamp(6)
  weight_unit     String?           @default("kg") @db.VarChar(10)
  default_sets    Int?              @default(3)
  default_reps    Int?              @default(12)
  rest_timer      Int?              @default(60)
  personal_bests  personal_bests[]
  progress_photos progress_photos[]
  workouts        workouts[]
}

model workouts {
  id              Int               @id @default(autoincrement())
  user_id         Int?
  name            String            @db.VarChar(255)
  date            DateTime?         @default(now()) @db.Timestamp(6)
  notes           String?
  created_at      DateTime?         @default(now()) @db.Timestamp(6)
  updated_at      DateTime?         @default(now()) @db.Timestamp(6)
  exercises       exercises[]
  personal_bests  personal_bests[]
  progress_photos progress_photos[]
  users           users?            @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
